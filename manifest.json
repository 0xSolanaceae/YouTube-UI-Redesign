{
    "manifest_version": 3,
    "name": "YouTube UI Redesign",
    "version": "1.0",
    "description": "YouTube redesign, inspired by Juxtopposed",
    "icons": {
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["js/iconConfig.js", "content.js"],
        "css": ["css/styles.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["fonts/*", "*.woff2"],
        "matches": ["*://*.youtube.com/*"]
      }
    ],
    "host_permissions": [
      "https://fonts.gstatic.com/*"
    ]
}